{
    "manifest_version": 2,
    "name": "Cortext",
    "description": "Cortext is a website that helps you detect bias, opinions, and fake news.",
    "version": "1.0.0",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "icons": {
		"128": "cortext_logo_128.png"
	},
    "browser_action": {
        "default_icon": "logo_original.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ]
}